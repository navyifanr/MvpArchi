<?xml version="1.0" encoding="utf-8"?>
<in.srain.cube.views.ptr.PtrFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ptr_frame_recycler_view"
    xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    cube_ptr:ptr_duration_to_back_refresh="200"
    cube_ptr:ptr_duration_to_close_header="500"
    cube_ptr:ptr_duration_to_back_footer="500"
    cube_ptr:ptr_keep_header_when_refresh="true"
    cube_ptr:ptr_ratio_of_header_height_to_refresh="0.9"
    cube_ptr:ptr_resistance="2.0">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ptr_recycler_view_base"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</in.srain.cube.views.ptr.PtrFrameLayout>